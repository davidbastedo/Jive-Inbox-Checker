{
  "manifest_version": 2,

  "name": "J-Signal",
  "description": "Displays the number of unread items in your Jive Inbox",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon-grey.png",
    "default_popup": "popup.html"
  },

  // Icons provided by https://www.iconfinder.com/iconsets/Isloo_icons_by_IconFinder
  // Creative Commons Attribution-No Derivative Works 3.0
   "icons": {
      "16": "icon-128.png",
      "48": "icon-128.png",
      "128": "icon-128.png"
   },


  "background": {
    "page": "background.html"
  },

  "permissions": [ "http://*/*", "https://*/*" ],

  "options_page": "settings.html"
}
